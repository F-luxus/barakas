{% extends 'base.html.twig' %}

{% block title %}Registruoti organizaciją{% endblock %}

{% block body %}

    <div class="col-md-5 mx-auto nfq-academy">
        <div class="panel">
        <div class="panel-header">
            <p>Organizacijos registracija</p>
        </div>    
        <div class="panel-content">
            <p class="text-black-50 text-center">
                Užregistruokite savo organizaciją ir <strong>Kaimyne padėk!</strong> aplikacija
                galėsi naudotis iš karto!
            </p>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
            {{ form_widget(form) }}
                <button type="submit" class="btn btn-success"><i class="fas fa-user-plus"></i> Registruoti organizaciją</button>
            {{ form_end(form) }}

        </div>    
        </div>
    </div>
{% endblock %}
