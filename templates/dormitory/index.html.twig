{% extends 'base.html.twig' %}

{% block title %}Bendrabutis{% endblock %}

{% block body %}


    <ul class="list-inline" style="display: flex; justify-content: space-between">
        <li class="list-inline-item"><img src="https://image.flaticon.com/icons/svg/2038/2038013.svg" style="height: 60px"></li>
        <li class="list-inline-item" style="align-self: center"><i class="fas fa-hotel"></i> <strong>Bendrabutis:</strong> {{ dormitory.title }}</li>
        <li class="list-inline-item" style="align-self: center"><i class="fas fa-thumbtack"></i> <strong>Gatvė:</strong> {{ dormitory.address }}</li>
        <li class="list-inline-item" style="align-self: center"><i class="fas fa-users"></i> <strong>Studentų:</strong> {{ students|length }}</li>
        <li class="list-inline-item" style="align-self: center">
            <button class="btn btn-warning" id="requestBtn">
                <i class="fas fa-pencil-alt"></i> Rašyti prašymą</button>
        </li>
    </ul>
    <div class="row">
        <div class="col-md-8">
            <div class="panel">
                <div class="panel-header">
                    <p>Prašymai</p>
                </div>
                <div class="panel-content">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="col-md-12" id="requestForm">
                        {{ form_start(formRequest, {'attr': {'id': 'postRequestForm'}}) }}
                        {{ form_widget(formRequest) }}
                        <div style="display: flex; justify-content: space-between">
                            <button type="submit" class="btn btn-success"><i class="far fa-paper-plane"></i> Siųsti</button>
                            <span id="closeRequestFormBtn" style="cursor:pointer;" class="btn btn-danger"><i class="fas fa-times"></i> Uždaryti</span>
                        </div>
                        {{ form_end(formRequest) }}
                        <br>
                    </div>

                    <ul class="list-unstyled">
                        {% for message in messages %}
                        <li style="font-size: 14px">
                            {% if(message.status == 0) %}
                                <img src="https://image.flaticon.com/icons/svg/785/785116.svg" style="height: 25px">
                            {% endif %}

                            <strong>{{ message.user }}</strong> <small><i>{{ message.createdAt|date("Y-m-d H:m:s") }}</i></small>
                            <span class="float-right" style="font-size: 24px">
                               <img src="https://image.flaticon.com/icons/svg/1229/1229996.svg" style="height: 50px">
                                {{ message.roomNr }}
                            </span>
                            <br>
                            <div style="width: 82%">{{ message.content }}</div>

                                <small>
                                    <span class="help-button">
                                        <img src="https://image.flaticon.com/icons/svg/1264/1264878.svg"> Padėti
                                    </span>
                                </small>
                                &nbsp;
                                <small>
                                    <span class="report-button">
                                        <img src="https://image.flaticon.com/icons/svg/196/196777.svg"> Pranešti
                                    </span>
                                </small>
                            <hr>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-header">
                    <p>Prisijungę studentai</p>
                </div>
                <div class="panel-content">

                </div>
            </div>
        </div>
    </div>
    <br>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('dormitory') }}
{% endblock %}